@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> cats.
        <br />You can <b>favorite</b> and <b>adopt</b> too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and cattery owners</b> and <b>all adoptions</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Cat" asp-action="All"
       class="btn btn-primary btn-lg">All Cats</a>
    <a asp-area="" asp-controller="Cat" asp-action="Add"
       class="btn btn-primary btn-lg">Add Cat</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="AdoptionApplication" asp-action="MyApplications"
       class="btn btn-primary btn-lg">My Adoption Applications</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Cat" asp-action="Favorites"
       class="btn btn-primary btn-lg">Favorites</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>