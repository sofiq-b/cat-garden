@model CatGarden.Web.ViewModels.Review.ReviewFormEditViewModel
@{
    ViewBag.Title = "Delete Review";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="card-text">Rating: @Model.Rating</p>
                <p class="card-text">@Model.Comment</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-controller="Cattery" asp-action="Details" asp-route-id="@Model.CatteryId" class="btn btn-secondary">Cancel</a>
                </form>

            </div>
        </div>
    </div>
</div>
